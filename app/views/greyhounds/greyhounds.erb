<h1> Welcome, <%= current_kennel.name %> Kennel ! </h1>
  <h2> Your Hounds </h2>

  <% if current_kennel.greyhounds.length < 1 %>
  <p> Your Kennel is Empty!!</p><br><br>
  <a href="/greyhounds/new">Add a Greyhound!</a><br><br>
  <a href="/logout">Logout!</a>
  <% else %>

  <% @greyhounds.each do |greyhound| %>
  <% if greyhound.kennel == current_kennel %>
  <h3>Greyhound Name: <%= greyhound.name %></h3><br>
  <p>Racing Kennel: <%= greyhound.kennel.name %><br></p>
  <p>Favorite Food:  <%= greyhound.food %><br></p>
  <p>Best Race Time:  <%= greyhound.time %><br></p>
  <p>Racing Grade:  <%= greyhound.grade %></p><br>
  <a href="/greyhounds/<%=greyhound.id%>/edit">Edit Your Hound!</a><br><br>
  <%end %>
  <% end %>
  <br><br>
  <a href="/greyhounds/new"> Add A Greyhound!</a><br><br>
  <a href="/logout">Logout!</a>
  <% end %>
